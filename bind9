apiVersion: apps/v1
kind: Deployment
metadata:
  name: bind
spec:
  replicas: 1
  selector:
    matchLabels:
      app: bind
  template:
    metadata:
      labels:
        app: bind
    spec:
      nodeSelector:
        "beta.kubernetes.io/os": linux
      containers:
      - name: bind
        image: sameersbn/bind:9.16.1-20200524
        ports:
        - containerPort: 53
          containerPort: 10000
---
apiVersion: v1
kind: Service
metadata:
  name: bind-svc
spec:
  type: LoadBalancer
  ports:
  - name: udp
    protocol: UDP
    port: 53
    targetPort: 53
  selector:
    app: bind
---
apiVersion: v1
kind: Service
metadata:
  name: bind-svc-tcp
spec:
  type: LoadBalancer
  ports:
  - name: tcp
    protocol: TCP
    port: 53
    targetPort: 53
  selector:
    app: bind
---
apiVersion: v1
kind: Service
metadata:
  name: bind-web
spec:
  type: LoadBalancer
  ports:
  - port: 10000
    targetPort: 10000
  selector:
    app: bind
